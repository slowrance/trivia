<div metal:use-macro="load: trivia_base_layout.pt">
    <div metal:fill-slot="content">

        <div class="content">
            <h1><span class="font-semi-bold">Endless Trivia</span></h1>

            <div tal:repeat="q questions" class="question">
                <p class="font-bold">
                    ${q.question}
                    <div tal:define="question_index python:repeat['q'].index">
                        <div tal:repeat="c q.choices" class="choice font-semi-bold">
                            <input type="radio" name="${python:question_index}" value="${python:c == q.correct_answer}" >
                            <span tal:attributes="class python:c == q.correct_answer">${c}</span>

                        </div>
                    </div>
                    <button class="btn btn-success">Check Answer</button>
                </p>
            </div>
        </div>

    </div>
</div>